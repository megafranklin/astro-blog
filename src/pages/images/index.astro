---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from "@images/post-05.png";
---

<MainLayout title="Imágenes">
    <h1 class="text-5xl text-white">Imágenes</h1>

    <img
        loading="eager"
        src="/assets/images/post-05.png"
        width="250"
        height="250"
    />

    <Image
        src={post05Img}
        width="250"
        height="250"
        alt="Imágen del post"
    />
    
    <Image
    src={post05Img}
    style={{
        width: "250px",
        height: "250px",
    }}
        width="500"
        height="500"
        alt="Imágen del post"
        />
    
    <h1>Quality Low</h1>
    <Image
        src={post05Img}
        quality="low"
        width="250"
        height="250"
        alt="Imágen del post"
    />

    <h1>Quality HIGH</h1>
    <Image
        src={post05Img}
        quality="high"
        width="250"
        height="250"
        alt="Imágen del post"
    />

    <h1>Formatos</h1>
    <Image
        src={post05Img}
        format="avif"
        width="250"
        height="250"
        alt="Imágen del post"
    />

    <h1>Picture 1</h1>
    <Picture
        src={post05Img}
        formats={['webp', 'avif', 'jpeg', 'png']}
        width="250"
        height="250"
        alt="Imágen del post"
    />

    <h1>Picture 2</h1>
    <!-- formats={['webp', 'avif', 'jpeg', 'png']} -->
    <Picture
        src={post05Img}
        widths={[240, 540, 720, post05Img.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}
        width="250"
        height="250"
        alt="Imágen del post"
    />

    <h1>Picture 3</h1>
    <!-- formats={['webp', 'avif', 'jpeg', 'png']} -->
    <!-- widths={[240, 540, 720, post05Img.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`} -->
    <Picture
        src={post05Img}
        alt="Imágen del post"
        width={post05Img.width / 2}
        densities={[1.5, 2]}
    />

    <div
        style={{
            height: '3000px',
        }}
    >
    </div>

    <img
        loading="lazy"
        src="/assets/images/post-05.png"
        width="250"
        height="250"
    />

</MainLayout>
<style>
    h1 {
        @apply text-white mt-10;
    }
</style>